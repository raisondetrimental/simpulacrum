# Flake8 configuration for Python linting

[flake8]
# Maximum line length
max-line-length = 100

# Extend default ignore list
extend-ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Exclude paths
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache,
    migrations,
    tests/fixtures

# Maximum complexity
max-complexity = 12

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:S101,S106
    conftest.py:F401,F403

# Enable additional checks
select = B,C,E,F,W,T4,B9

# Import order style
import-order-style = google
application-import-names = src,api,services,models,utils
